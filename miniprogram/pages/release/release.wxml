      <view class='text-grey'>闲置书本</view>
      <view class='text-gray text-sm'>专门为闲置书本定制的交易方式！</view>
    </view>
  </view>
</view>
<view class="release-goods cu-list menu menu-avatar" bindtap="releaseGoodsOnTap">

  </view>
</view>
<view class="release-phone cu-list menu menu-avatar" bindtap="releasePhoneOnTap">
  <view class="cu-item">
    <view class="cu-avatar round lg" style="background-image:url(https://image.weilanwl.com/img/square-1.jpg);"></view>
    <view class='content'>
      <view class='text-grey'>手机回收</view>
      <view class='text-gray text-sm'>把手机高价直接卖给回收宝、立刻换钱</view>
    </view>
  </view>
